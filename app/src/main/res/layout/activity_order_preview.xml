<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            style="@style/AppBarLayout_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar_style">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/BackButtonStyle"  />
        <com.google.android.material.textview.MaterialTextView
            android:text="@string/order_summary"
            android:layout_marginStart="@dimen/formItemGap"
            style="@style/Toolbar_heading_text_style"/>
        </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="@dimen/formWindowPaddingHorizontal"
            >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/order_tile_padding"
            android:paddingRight="@dimen/order_tile_padding"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/formWindowVerticalPadding"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Order_Summary_fields_heading_text_style"
                    android:text="@string/order_no"
                    android:paddingTop="@dimen/formWindowPaddingHorizontal"
                    android:textSize="@dimen/navHeadingTextSize"/>
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Order_Summary_fields_text_style"
                    android:id="@+id/order_no"
                    android:paddingTop="@dimen/formWindowPaddingHorizontal"
                    android:textSize="@dimen/navHeadingTextSize"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/formWindowPaddingHorizontal"
                    android:gravity="end"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/status_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_completed"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/formWindowVerticalPadding"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/formWindowVerticalPadding"
                    android:gravity="start">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Order_Summary_fields_heading_text_style"
                        android:text="@string/item_names" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/formWindowVerticalPadding"
                    android:gravity="end">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Order_Summary_fields_heading_text_style"
                            android:text="@string/quantity_ordered" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                tools:listitem="@layout/order_preview_list_itemview"
                />
            <View
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_green"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:orientation="vertical"
                android:gravity="end">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/formWindowVerticalPadding"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Order_Summary_fields_heading_text_style"
                        android:text="@string/total_price"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/total_price"
                        style="@style/Order_Summary_fields_text_style" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_green"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/formWindowVerticalPadding"
                android:layout_marginStart="@dimen/formWindowVerticalPadding"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Order_Summary_fields_heading_text_style"
                    android:text="@string/customer_details"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/formWindowVerticalPadding"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Order_Summary_fields_heading_text_style"
                        android:text="@string/name"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/customer_name"
                        style="@style/Order_Summary_fields_text_style"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>